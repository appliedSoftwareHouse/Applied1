                </ul>

            </div>
        </div>

        <hr />

    </div>
</form>


@if (Model.ThisMessages.Count > 0)
{
    <div class="container">
        @foreach (Message message in Model.ThisMessages)
        {
            if (message.ErrorID == 1)
            {
                <div class="error-msg bg-info"> @message.Msg; </div>
            }

            if (message.ErrorID == 2)
            {
                <div class="error-msg bg-success"> @message.Msg; </div>
            }

            if (message.ErrorID == 3)
            {
                <div class="error-msg bg-warning"> @message.Msg; </div>
            }



        }
    </div>

}