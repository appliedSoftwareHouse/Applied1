<style>
    .carousel-img {
        width: 100%;
        height: 100%;
        background-size: cover;
        object-fit: cover;
    }

    .carousel-inner {
        width: 100%;
        height: 365px
    }

    #Mycarousel {
        width: 100%;
        height: 370px;
        padding: 0px;
    }

    #MyBlock {
    }

