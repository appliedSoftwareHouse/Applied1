@model IndexModel
@{
    ViewData["Title"] = "Home page";
    string MyCompany = UserProfile.GetCompanyName(User);
    var UserName = User.Identity.Name;
    var username = User.Identity.Name;
}

<div class="mt-3 p-1 bg-success text-white rounded">
    <h3 class="text-center">@MyCompany</h3>
</div>
<br />


<style>
    .carousel-img {
        width: 100%;
        height: 100%;
        background-size: cover;
        object-fit: cover;
    }

    .carousel-inner {
        width: 100%;
        height: 365px
    }

    #Mycarousel {
        width: 100%;
        height: 370px;
        padding: 0px;
    }

