<!--  Carousel -->
<div class="container" id="Mycarousel">
    <div id="carouselExampleFade" class="carousel slide carousel-fade">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./Images/Picture3.jpg" class="carousel-img" alt="image">
            </div>
            <div class="carousel-item">
                <img src="./Images/Picture2.jpg" class="carousel-img" alt="image">
            </div>
            <div class="carousel-item">
                <img src="./Images/Picture5.jpg" class="carousel-img" alt="image">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!--  carousel END -->

<blockquote class="blockquote">
    <p>For 30 years, providing Desktop Software Solution, Now developing a web base Accounting Software for small and medium scale organization.</p>
    <footer class="blockquote-footer align-content-center">It is Under Development.</footer>
</blockquote>

<form method="post">
    <div class="d-flex flex-row flex-wrap bd-highlight mb-3 justify-content-center">
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Test" asp-page=".\Sales\SaleInvoice" formmethod="get" />
        </div>

        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Cash Book" asp-page-handler="CashBook" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Bank Book" asp-page-handler="BankBook" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Write Cheque" asp-page-handler="WCheque">
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Sale Invoice" asp-page=".\Sales\SaleInvoice2" />
        </div>
        <div class="p-2 d-inline-block">
            <button class="btn btn-primary" asp-page-handler="Receipt">Issue Receipt</button>
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Issue Receipt" asp-page=".\Accounts\Receipt?0" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Bill Payable" asp-page=".\Accounts\BillPayableList" formmethod="get" />
        </div>

        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Ledgers" asp-page=".\ReportPrint\GeneralLedgers" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Vouchers" asp-page=".\Accounts\VouchersList" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="JV Voucher" asp-page=".\Accounts\JV" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="JV List" asp-page=".\Accounts\JVList" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Stock Position" asp-page=".\Stock\StockPosition" formmethod="get" />
        </div>
    </div>
</form>



